<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44px"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_marginLeft="7dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_message_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/home_icon_image"/>
    </LinearLayout>
    <RelativeLayout
        android:gravity="center"
        android:layout_weight="8.5"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/item_message_background_group"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/item_message_background"
                android:layout_centerInParent="true"
                android:layout_width="251px"
                android:layout_height="34px"
                android:background="@drawable/item_message_back"/>
            <LinearLayout
                android:layout_marginLeft="14dp"
                android:layout_centerVertical = "true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="语音："
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你有一条留言" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/item_message_noread"
            android:layout_alignTop ="@+id/item_message_background_group"
            android:layout_alignRight ="@+id/item_message_background_group"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/item_noread"/>
    </RelativeLayout>
</LinearLayout>
